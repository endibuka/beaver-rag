{
  "name": "beaver-rag",
  "version": "0.1.1",
  "description": "Lightweight TypeScript RAG system with PostgreSQL and OpenAI - Built by beavers, for builders ðŸ¦«",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./embeddings": {
      "types": "./dist/embeddings/index.d.ts",
      "import": "./dist/embeddings/index.js",
      "require": "./dist/embeddings/index.cjs"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.js",
      "require": "./dist/database/index.cjs"
    },
    "./chunking": {
      "types": "./dist/chunking/index.d.ts",
      "import": "./dist/chunking/index.js",
      "require": "./dist/chunking/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src tests",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run test:unit"
  },
  "keywords": [
    "rag",
    "retrieval-augmented-generation",
    "vector-database",
    "embeddings",
    "openai",
    "postgresql",
    "pgvector",
    "typescript",
    "bun"
  ],
  "author": "Endi Buka <endibuka@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/endibuka/beaver-rag"
  },
  "bugs": {
    "url": "https://github.com/endibuka/beaver-rag/issues"
  },
  "homepage": "https://github.com/endibuka/beaver-rag#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^4.70.0",
    "pg": "^8.13.1",
    "pgvector": "^0.2.0",
    "tiktoken": "^1.0.17",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "typescript": "^5.7.2",
    "tsup": "^8.3.5",
    "prettier": "^3.4.2",
    "eslint": "^9.17.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0"
  }
}
